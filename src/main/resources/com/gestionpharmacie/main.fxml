<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.gestionpharmacie.Controllers.MainController" prefHeight="600.0" prefWidth="900.0">
    
    <!-- Left Side Panel Container -->
    <left>
        <HBox fx:id="sidePanelContainer">
            <VBox fx:id="sidePanel" styleClass="side-panel-bg" prefWidth="200.0" >
                <padding>
                    <Insets top="20" bottom="20"/>
                </padding>
                
                <!-- Navigation Buttons -->
                <VBox spacing="15" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets left="15" right="15" top="15"/>
                    </padding>
                    
                    <Button fx:id="saleHistoryBtn" text="Sale History" styleClass="nav-btn" 
                            onAction="#showSaleHistory" maxWidth="Infinity"/>
                    
                    <Button fx:id="productsBtn" text="Stock" styleClass="nav-btn" 
                            onAction="#showProductsPage" maxWidth="Infinity"/>
                    
                    <Button fx:id="shipmentsBtn" text="Shipments" styleClass="nav-btn" 
                            onAction="#showShipmentsPage" maxWidth="Infinity"/>
                    
                    <Button fx:id="suppliersBtn" text="Suppliers" styleClass="nav-btn" 
                            onAction="#showSuppliersPage" maxWidth="Infinity"/>
                </VBox>
            </VBox>
            
            <!-- Toggle Button (stays visible) -->
            <VBox fx:id="togglePanel" alignment="TOP_CENTER" style="-fx-background-color: #34495e;">
                <padding>
                    <Insets top="10"/>
                </padding>
                <Button fx:id="toggleButton" text="â—€" styleClass="toggle-btn" 
                        onAction="#toggleSidePanel"/>
            </VBox>
        </HBox>
    </left>
    
    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Pages will be loaded here -->
            
            <VBox fx:id="saleHistoryPage" alignment="TOP_CENTER" spacing="20" visible="true">
                
                <!-- List + Add Button Container -->
                <VBox spacing="15" alignment="TOP_CENTER" prefWidth="700">

                    <Label text="Sale History" styleClass="page-title"/>
                    <ListView fx:id="saleHistoryList" prefHeight="420" styleClass="list-view"/>

                    <Button fx:id="addSaleBtn" text="+ Add Sale"
                            styleClass="add-btn"
                            onAction="#addSale"/>
                </VBox>
            </VBox>
            
            <VBox fx:id="productsPage" alignment="CENTER" spacing="20" visible="false">
                <!-- List + Add Button Container -->
                <VBox spacing="15" alignment="TOP_CENTER" prefWidth="700">

                    <Label text="Stock" styleClass="page-title"/>
                    <ListView fx:id="productsList" prefHeight="420" styleClass="list-view"/>

                    <HBox fx:id="editingBtns_product" spacing="10" alignment="CENTER">
                        <Button fx:id="addProductBtn" text="+ Add Product" styleClass="add-btn" onAction="#addProduct"/>
                    </HBox>
                </VBox>
            </VBox>
            
            <VBox fx:id="shipmentsPage" alignment="CENTER" spacing="20" visible="false">
                <Label text="Shipments" styleClass="page-title"/>
                <ListView fx:id="shipmentsList" prefHeight="420" styleClass="list-view"/>

                <HBox fx:id="editingBtns_shipment" spacing="10" alignment="CENTER">
                    <Button fx:id="addShipmentBtn" text="+ Add Shipment" styleClass="add-btn" onAction="#addShipment"/>
                </HBox>           
            </VBox>
            
            <!-- Profile Page -->
            <VBox fx:id="suppliersPage" alignment="CENTER" spacing="20" visible="false">
                <Label text="Suppliers" styleClass="page-title"/>
                <ListView fx:id="suppliersList" prefHeight="420" styleClass="list-view"/>
                <Button fx:id="editSupplierBtn" text="edit" styleClass="edit-btn" visible="false"/>
            </VBox>
            
        </StackPane>
    </center>
    
</BorderPane>
