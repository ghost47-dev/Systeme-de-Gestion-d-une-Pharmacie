<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionpharmacie.controllers.AddShipmentController"
      alignment="CENTER"
      spacing="20"
      prefWidth="900" prefHeight="600"
      style="-fx-background-color: #f6f6f6;">

    <Label text="Add New Shipment" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <VBox spacing="10" alignment="CENTER" prefWidth="700">
        <Label text="Shipment Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <GridPane hgap="20" vgap="15" alignment="CENTER">
            <Label text="Supplier name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="supplierName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Supplier phone:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="supplierPhone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Shipment request date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="requestDate" promptText="request date" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            

            <Label text="Shipment arrival Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="arrivalDate" promptText="arrival date" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Is the shipment received ?" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <CheckBox fx:id="isReceived" text="Yes" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="check-box" />
            <CheckBox fx:id="notReceived" text="No" GridPane.rowIndex="4" GridPane.columnIndex="2" styleClass="check-box" />

        </GridPane>
        
        <Label fx:id="errorLabel"
            visible="false"
            styleClass="login-error"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER" prefWidth="700">
        <Label text="Shipment Good" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <ScrollPane fitToWidth="true" prefHeight="150" style="-fx-background-color: #f6f6f6;" >
            <content>
                <VBox fx:id="shipmentsGoodContainer" spacing="10" />
            </content>
        </ScrollPane>

    </VBox>

    <HBox spacing="15" alignment="CENTER" prefWidth="700">
        <Button text="+ Add another good" onAction="#addGoodRow" styleClass="add-btn"/>
        <Button text="Save Shipment" onAction="#saveShipment" styleClass="edit-btn"/>
        <Button text="Back" onAction="#goBack" styleClass="delete-btn"/>
    </HBox>
</VBox>

