<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gestionpharmacie.Controllers.ProductController"
      alignment="CENTER"
      spacing="20"
      prefWidth="900" prefHeight="600"
      style="-fx-background-color: #f6f6f6;">

    <Label text="Add New Product" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <!-- CLIENT INFO -->
    <VBox spacing="10" alignment="CENTER" prefWidth="700">
        <Label text="Product Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <GridPane hgap="20" vgap="15" alignment="CENTER">

            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="productName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="productPrice" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Quantity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="productQuantity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    

        </GridPane>
        <Label fx:id="errorLabel"
            visible="false"
            styleClass="login-error"/>
    </VBox>

    <!-- BUTTONS -->
    <HBox spacing="15" alignment="CENTER" prefWidth="700">
        <Button text="Save product" onAction="#saveProduct" styleClass="add-btn"/>
        <Button text="Back" onAction="#goBack" styleClass="delete-btn"/>
    </HBox>
</VBox>

